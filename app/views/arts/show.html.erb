<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @art.title %>
</p>

<p>
  <%= image_tag @art.artpic.url(:medium) %>
</p>

<h3>Reviews</h3>

<% @art.comments.each do |review| %>

<p>

<%= review.comment %>

<br>

Added on: <%= review.created_at %>

</p>

<% end %>

<h1>New Comment</h1>

<%= render 'comments/form' %>

